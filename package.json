{
  "name": "trax_exchange_api",
  "version": "1.0.0",
  "description": "Express API Server for Trax Exchange Application",
  "main": "src/index.ts",
  "scripts": {
    "start": "node src/index.js",
    "test": "mocha test/unit/**/*.t",
    "cover": "nyc mocha test/unit/**/*.ts",
    "lint": "tslint --project tsconfig.json src/**/*.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test",
      "coverage",
      "gulpfile.js",
      "isc-common"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "author": "Jack Hanley",
  "license": "MIT",
  "dependencies": {
    "@cloudant/cloudant": "^4.0.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "googleapis": "^35.0.0",
    "lodash": "^4.17.11",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/lodash": "^4.14.122",
    "@types/node": "^10.12.29",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "source-map-support": "^0.5.10",
    "tslint": "^5.14.0",
    "winston": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint src/**/*.ts --fix"
    ]
  }
}
